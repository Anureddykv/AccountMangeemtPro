<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.AlternateNameActivity">
    <TextView
        android:id="@+id/txtSelectedAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Account : "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>


    <EditText
        android:id="@+id/editTextAlternateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Alternate Name"
        android:inputType="text"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/btnSpeechToText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackground"
        android:src="@android:drawable/ic_btn_speak_now"
        android:contentDescription="Speech to Text" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:background="@android:color/holo_blue_dark"/>
</LinearLayout>
